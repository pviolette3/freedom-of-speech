
<head>
  <% include header_files %>
</head>

<% function empty() { return rooms.length && rooms.length > 0; } %>
<% include navbar %>

<div class="container-fluid">
    <div class="row-fluid max-height no-overflow">
        <% if(empty()) { %>
          <h4>Join a chat!</h4>
        <% } %>


        

        <% if(empty()) { %>
          <%= "Or" %>
        <% } %>
        <div class="span3">
            <h4>Create your own chat!</h4>
            <form name="input" action="/chat/new" method="post" class="form-horizontal">
                <input id="create" type="text" name="name" placeholder="Name" style="margin:0px;">
                <input type="submit" value="Create" class="btn">
            </form>
        </div>
        <div class="span9 max-height">
            <h4>Avaiable Chats</h4>
            <div class="scrollable">
                <ul>
                <% for(var id in rooms) { %>
                  <li><a href="/chat/<%= id %>"><%=rooms[id].name%></a></li>
                <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>
