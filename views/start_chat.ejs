
<head>
  <% include header_files %>
</head>

<% function empty() { return rooms.length && rooms.length > 0; } %>
<% include navbar %>

<div class="container-fluid">
    <div class="row-fluid">
        <% if(empty()) { %>
          
          <h4>Join a chat!</h4>
        <% } %>


        <ul>
        <% for(var id in rooms) { %>
          <li><a href="/chat/<%= id %>"><%=rooms[id].name%></a></li>
        <% } %>
        </ul>

        <% if(empty()) { %>
          <%= "Or" %>
        <% } %>
        <div class="span3">
            <h5>create your own chat!</h5>
            <form name="input" action="/chat/new" method="post">
                <input id="create" type="text" name="name" placeholder="Name" style="margin:0px;">
                <input type="submit" value="Create" class="btn">
            </form>
        </div>
    </div>
</div>
